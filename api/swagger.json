{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "marketplace-api",
        "description": "Marketplace API de clases particulares - Only in localhost mode",
        "license": {
            "name": "ISC"
        }
    },
    "host": "localhost:3001",
    "basePath": "/",
    "tags": [
        {
            "name": "Marketplace",
            "description": "API for users in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/create-user": {
            "post": {
                "tags": [
                    "Users"
                ],
                "description": "Create new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "New user is created"
                    },
                    "400": {
                        "description": "Missing a mandatory field"
                    },
                    "409": {
                        "description": "Email in use"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "firstName",
                "lastName",
                "email",
                "phone",
                "password",
                "role",
                "degreeTeacher",
                "experienceTeacher",
                "dateOfBirthStudent",
                "degreeLevelStudent",
                "lastModified"
            ],
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "email": {
                    "type": "string",
                    "uniqueItems": true
                },
                "phone": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "degreeTeacher": {
                    "type": "string"
                },
                "experienceTeacher": {
                    "type": "string"
                },
                "dateOfBirthStudent": {
                    "type": "string"
                },
                "degreeLevelStudent": {
                    "type": "string"
                }
            }
        }
    }
}